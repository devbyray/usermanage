<div class="row">

	<div class="col-md-8">
		<article>
			<form action="/user/update/<%= user.id %>" method="POST" class="form-sigin">
				<h2>Hey, you're editing a user....</h2>

				<div class="input-form">
					<input type="text" class="form-control" placeholder="Your name" name="name" value="<%= user.name %>">
				</div>
				<div class="input-form">
					<input type="text" class="form-control" placeholder="Your familyname" name="familyname" value="<%= user.familyname %>">
				</div>
				<div class="input-form">
					<input type="text" class="form-control" placeholder="Your title" name="title" value="<%= user.title %>">
				</div>
				<div class="input-form">
					<input type="email" class="form-control" placeholder="Your e-mail address" name="email" value="<%= user.email %>">
				</div>

				<div class="input-form">
					<input type="date" class="form-control" placeholder="Your date of birth" name="birthday" value="<%= user.birthday %>">
				</div>

				<div class="input-form">
					<input type="tel" class="form-control" placeholder="Your telephone nr" name="phone" value="<%= user.phone %>">
				</div>

				<div class="input-form">
					<input type="text" class="form-control" placeholder="Your address" name="address" value="<%= user.address %>">
				</div>

				<div class="input-form">
					<input type="text" class="form-control" placeholder="Your postal" name="postal" value="<%= user.postal %>">
				</div>

				<div class="input-form">
					<input type="text" class="form-control" placeholder="Your city" name="city" value="<%= user.city %>">
				</div>

				<div class="input-form">
					<input type="text" class="form-control" placeholder="Your country" name="country" value="<%= user.country %>">
				</div>

				<div class="input-form">
					<input type="url" class="form-control" placeholder="Your profileUrl" name="profileUrl" value="<%= user.profileUrl %>">
				</div>

				<input type="submit" class="btn btn-lg btn-primary btn-block" value="Save changes">
				<input type="hidden" name="_csrf" value="<%= _csrf %>">
			</form>
		</article>
	</div>	

	<div class="col-md-4">
		<aside>
			<h2>Sidebar</h2>
			<p>Edit user</p>
		</aside>
	</div>

</div>