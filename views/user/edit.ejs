<div class="row">

	<div class="col-md-8">
		<article>
			<form action="/user/update/<%= user.id %>" method="POST" class="form-sigin">
				<h2>Hey, you're editing a user....</h2>

				<div class="input-form">
					<input type="text" class="form-control" placeholder="Your name" name="name" value="<%= user.name %>">
				</div>
				<div class="input-form">
					<input type="text" class="form-control" placeholder="Your title" name="title" value="<%= user.title %>">
				</div>
				<div class="input-form">
					<input type="email" class="form-control" placeholder="Your e-mail address" name="email" value="<%= user.email %>">
				</div>

				<input type="submit" class="btn btn-lg btn-primary btn-block" value="Save changes">
				<input type="hidden" name="_csrf" value="<%= _csrf %>">
			</form>
		</article>
	</div>	

	<div class="col-md-4">
		<aside>
			<h2>Sidebar</h2>
			<p>Edit user</p>
		</aside>
	</div>

</div>