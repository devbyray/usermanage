<div class="row">

	<div class="col-md-12">
		<article>
			<h1>Users</h1>

			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Name</th>
						<th>E-mail</th>
						<th>Birthday</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% _.each(users, function(user) { %>
					<tr data-id="<%= user.id %>" data-model="user"> 
						<td>
							<div class="profile-pic">
								<img src="<%= user.profileUrl %>" alt="Profile pic of <%= user.name %> <%= user.familyname %>" />
							</div>
						</td>
						<td><a href="/user/show/<%= user.id %>"><%= user.name %></a></td>
						<td><%= user.email %></td>
						<td><%= user.birthday %></td>
						<td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Show</a></td>
						<td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a></td>
						<td>
							<form action="/user/destroy/<%= user.id %>" method="POST">
								<input type="hidden" name="_method" value="delete">
								<input type="submit" class="btn btn-sm btn-danger" value="Delete">
								<input type="hidden" name="_csrf" value="<%= _csrf %>">
							</form>
						</td>
					</tr>
					<% }); %>
				</tbody>
			</table>
		</article>
	</div>	
</div>